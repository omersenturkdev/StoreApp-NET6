@model Product
<div class="col-lg-4 col-md-4 col-sm-12 my-3">
    <div class="card" style="width: 18rem;">
        <img src="~/images/images1.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Price</p>
            <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model.Id">Details</a>
        </div>
    </div>
</div>